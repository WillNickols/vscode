{
  "name": "erdos-html-languageserver",
  "description": "HTML language server",
  "version": "1.0.0",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "engines": {
    "node": "*"
  },
  "main": "./out/node/htmlServerMain",
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "erdos-css-languageservice": "^6.3.7",
    "erdos-html-languageservice": "^5.5.1",
    "erdos-languageserver": "^10.0.0-next.13",
    "erdos-languageserver-textdocument": "^1.0.12",
    "erdos-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "22.x"
  },
  "scripts": {
    "compile": "npx gulp compile-extension:html-language-features-server",
    "watch": "npx gulp watch-extension:html-language-features-server",
    "install-service-next": "npm install erdos-css-languageservice && npm install erdos-html-languageservice",
    "install-service-local": "npm install erdos-css-languageservice && npm install erdos-html-languageservice",
    "install-server-next": "npm install erdos-languageserver@next",
    "install-server-local": "npm install erdos-languageserver",
    "test": "npm run compile && node ./test/index.js"
  }
}
