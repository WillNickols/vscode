{
  "name": "erdos-json-languageserver",
  "description": "JSON language server",
  "version": "1.3.4",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "engines": {
    "node": "*"
  },
  "bin": {
    "erdos-json-languageserver": "./bin/erdos-json-languageserver"
  },
  "main": "./out/node/jsonServerMain",
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "jsonc-parser": "^3.3.1",
    "request-light": "^0.8.0",
    "erdos-json-languageservice": "^5.6.1",
    "erdos-languageserver": "^10.0.0-next.13",
    "erdos-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "22.x"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run compile",
    "compile": "npx gulp compile-extension:json-language-features-server",
    "watch": "npx gulp watch-extension:json-language-features-server",
    "clean": "../../../node_modules/.bin/rimraf out",
    "install-service-next": "npm install erdos-json-languageservice",
    "install-service-latest": "npm install erdos-json-languageservice",
    "install-service-local": "npm link erdos-json-languageservice",
    "install-server-next": "npm install erdos-languageserver@next",
    "install-server-local": "npm link erdos-languageserver-server",
    "version": "git commit -m \"JSON Language Server $npm_package_version\" package.json"
  }
}
